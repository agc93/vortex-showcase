{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": false,
        "removeComments": false,
        "preserveConstEnums": true,
        "rootDir": "src",
        "outDir": "./lib",
        "jsx": "react",
        "sourceMap": false,
        "esModuleInterop": true,
        "declaration": true,
        "declarationMap": true
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "src/index.ts",
        "src/api.ts"
    ]
}